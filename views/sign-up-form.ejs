<%- include("./partials/header") %>

    <div class="form-container">
        <form action="/sign-up" method="POST" class="form">

            <h1 class="form-heading">Sign Up:</h1>
            <div class="form-group">
                <label for="Email">Email</label>
                <input id="username" name="username" placeholder="user123@gmail.com" type="email"
                    value="<%= typeof username !== 'undefined' ? username : '' %>" />
            </div>

            <div class="form-group">
                <label for="full_name">Full name:</label>
                <input id="full_name" name="full_name" placeholder="John Smith" type="text"
                    value="<%= typeof full_name!== 'undefined' ? full_name : '' %>" />
            </div>


            <div class="form-group">
                <label for="password">Password</label>
                <input id="password" name="password" type="password" />
            </div>

            <div class="form-group">
                <label for="confirm_password">Confirm password</label>
                <input id="confirm_password" name="confirm_password" type="password" />
            </div>

            <button class="submit-button" type="submit">Sign Up</button>

            <% if (typeof errorList !== 'undefined' && errorList.length > 0) { %>
            <ul class="error-messages">
                <% errorList.forEach(e => { %>
                    <li><%= e.msg %></li>
                <% }) %>
            </ul>
        <% } %>
        </form>
    </div>
    <%- include("./partials/footer") %>